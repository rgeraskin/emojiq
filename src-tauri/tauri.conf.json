{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "emojiq",
  "version": "0.1.0",
  "identifier": "com.rg.emojiq",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "emojiq",
        "width": 250,
        "height": 290,
        "minWidth": 350,
        "minHeight": 290,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "windowEffects": {
          "effects": [
            "hudWindow"
          ],
          "state": "active",
          "radius": 12.0
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "src-python/"
    ]
  }
}